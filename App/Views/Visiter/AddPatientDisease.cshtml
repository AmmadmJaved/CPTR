@model App.Models.VisiterPatientViewModels.PatientDisease

<h4>PatientDisease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPatientDisease">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiseaseId" class="control-label"></label>
                <input asp-for="DiseaseId" class="form-control" />
                <span asp-validation-for="DiseaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment" class="control-label"></label>
                <input asp-for="Treatment" class="form-control" />
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine" class="control-label"></label>
                <input asp-for="Medicine" class="form-control" />
                <span asp-validation-for="Medicine" class="text-danger"></span>
            </div>
            @await Html.PartialAsync("DiseasePrevalence",Model.DiseasePrevalence )
            @await Html.PartialAsync("Diagnose" , Model.Diagnose)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
